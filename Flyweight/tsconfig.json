{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ES2015", "DOM"],         // Add DOM to access 'console', 'document', etc.
    "module": "commonjs",
    "strict": true,
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
